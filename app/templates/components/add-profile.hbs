{{#if addNewProfile}}
<h3>ADD YOUR INFO</h3>
<form>
  <div class="form-group">
    <label for="name">NAME</label>
    {{input value=name id="name"}}
  </div>
  <div class="form-group">
    <label for="city">CITY</label>
    {{input value=city id="city"}}
  </div>
  <div class="form-group">
    <label for="image">Image</label>
    {{input value=image id="image"}}
  </div>
  <button {{action 'saveForm'}} class="btn">SAVE INFORMATION</button>
</form>
{{else}}
<button {{action 'showForm'}}>ADD INFO</button>
{{/if}}
